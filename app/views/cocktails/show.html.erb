<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to "delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail.id) %>
<br>
<%= link_to "Back", cocktails_path %>

